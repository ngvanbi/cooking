{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@helper/*": ["src/_helper/*"],
      "@users/*": ["src/users/*"],
      "@auth/*": ["src/auth/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
